<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.demo.example.activity.EnterActivity">


        <Button
            android:id="@+id/go_to_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToMain"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToCamera"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToMove"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_move2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToMove2"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToAnim"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_fall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToFallDown"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_fading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToFading"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_bc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToBc"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_lottie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToLottie"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_ws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToWS"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToRD"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/go_to_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="goToConL"
            android:textAlignment="center"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>