<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.demo.amazing"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture">
    </supports-gl-texture>
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:name=".app.AmazingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.EnterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.OpenGLActivity">
        </activity>
        <activity android:name=".activity.CameraActivity">
        </activity>
        <activity android:name=".activity.MoveActivity">
        </activity>
        <activity android:name=".activity.Move2Activity">
        </activity>
        <activity android:name=".activity.SendFlowersActivity">
        </activity>
        <activity android:name=".activity.FallDownActivity">
        </activity>
        <activity
            android:name=".activity.FadingActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.BroadCastActivity">
        </activity>
        <activity android:name=".activity.LottieActivity">
        </activity>
        <activity android:name=".activity.WSTestActivity">
        </activity>
        <activity android:name=".activity.ScreenRecordActivity">
        </activity>
        <activity
            android:name=".activity.ConstraintActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen">
        </activity>
        <activity
            android:name=".activity.ScanFaceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen">
        </activity>
        <activity android:name=".activity.ShimmerViewActivity">
        </activity>
        <activity
            android:name=".activity.NestScrollingActivity"
            android:label="@string/title_activity_nest_scrolling"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.TabedActivity"
            android:label="@string/title_activity_tabed"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.FragmentActivity">
        </activity>
    </application>

</manifest>